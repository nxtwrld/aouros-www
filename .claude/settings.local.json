{
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(npm run build:*)",
      "mcp__chrome-devtools__navigate_page",
      "mcp__chrome-devtools__performance_start_trace"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bunx claude-code-tamagotchi violation-check"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx claude-code-tamagotchi statusline",
    "padding": 0
  }
}
